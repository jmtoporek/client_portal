<div class="row">
    <div class="span6">
        <p id="notice"><%= notice %></p>

        <p>
          <b>Name:</b>
          <%= @customer.name %>
        </p>
        
        <div class="btn-group">
            <%= link_to 'Edit', edit_customer_path(@customer), :class=>"btn" %>
            <%= link_to 'Back', customers_path, :class=>"btn" %>
            <%= link_to 'Add User to customer', new_customer_user_path(@customer.id), :class=>"btn" %>
        </div>
        
    </div>
    
    <div class="span3">
        Locations
        <% if @customer.locations > 0 %>
        <ul>
            <% @customer.locations.each do |location| %>
            <li><%= location.store_id %></li>
            <% end %>
        </ul>
        <% end %>
    </div>
</div>