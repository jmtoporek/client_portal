<div class="row-fluid">

    <div class="block">

        <p>
          <b>Name:</b>
          <%= @customer.name %>
        </p>
        
        <% if current_user.internal %>
        <div class="btn-group">
            <%= link_to 'Edit', edit_customer_path(@customer), :class=>"btn" %>
            <%= link_to 'Back', customers_path, :class=>"btn" %>
        </div>
        <% end %>
    </div>
</div>

<div class="row-fluid">
    
    <div class="block span4">
        <%= render "showLocations" %>
    </div>
    
    <div class="block span4">
        <%= render "showLocationsByState" %>
    </div>
     
    <div class="block span4">
        <%= render "showUsers" %>
    </div>
    
</div>

