<%= semantic_form_for @state, :html => {:class => "form-horizontal"} do |f| %>
	<% f.semantic_errors %>
    <% if @state.errors.any? %>
    <div class="alert alert-error">
        <%= pluralize(@state.errors.count, "error") %> prohibited this state from being saved:
        <ul>
        <% @state.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.inputs do %>
        <%= f.input :name %>
        <%= f.input :abbr %>
    <% end %>
    
    <%= f.actions do %>
        <%= f.action :submit, :as => :button, :html => {:class => "btn btn-primary"} %>
    <% end %>
	
<% end %>