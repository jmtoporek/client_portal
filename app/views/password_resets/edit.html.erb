<div id="login-container">

    <div id="login-header">
        <h3>Reset your password</h3>
    </div>

    <div id="login-content" class="clearfix">
    <%= form_for @user, :url => password_reset_path, :html => {:class => "form-horizontal"} do |f| %>

        <% if @user.errors.any? %>
        <div class="alert alert-error">
            <%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
        <% end %>
    
        <fieldset>
            <div class="control-group">
                <%= f.label :password, :class => "control-label" %>
                <div class="controls">
                    <%= f.password_field :password, :class=> "input-medium" %>
                </div>
            </div>
          
            <div class="control-group">
                <%= f.label :password_confirmation, :class => "control-label" %>
                <div class="controls">
                    <%= f.password_field :password_confirmation, :class=> "input-medium" %>
                </div>
            </div>
            
            <div class="actions">
                <div class="controls">
                <%= f.submit 'Submit', :class =>"btn-primary" %>
                </div>
            </div>
        </fieldset>
    <% end %>
    </div>