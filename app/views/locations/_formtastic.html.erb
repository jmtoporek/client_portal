<%= semantic_form_for @location, :html => {:class => "form-horizontal"} do |f| %>
	<% f.semantic_errors %>
    <% if @location.errors.any? %>
    <div class="alert alert-error">
        <%= pluralize(@location.errors.count, "error") %> prohibited this state from being saved:
        <ul>
        <% @location.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.inputs do %>
        <%= f.input :store_number %>
        <%= f.input :street %>
        <%= f.input :city %>
        <%= f.input :state, :as => :select, :collection => State.all %>
        <%= f.input :zipcode %>
        <%= f.input :phone %>
    <% end %>
    
    <%= f.actions do %>
        <%= f.action :submit, :as => :button %>
    <% end %>
	
<% end %>